---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import { Image } from 'astro:assets';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate, heroImage, heroAlt } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
	</head>

	<body>
		<Header />
		<main>
			<article>
				<div class="hero-image">
					{heroImage && (
						<figure>
							<Image width={1020} height={510} src={heroImage} alt={heroAlt || title} />
							{heroAlt && <figcaption>{heroAlt}</figcaption>}
						</figure>
					)}
				</div>
				<div class="prose">
					<div class="title">
						<h1>{title}</h1>
						<p class="description">{description}</p>
						<div class="date">
							<FormattedDate date={pubDate} />
							{
								updatedDate && (
									<div class="last-updated-on">
										Last updated on <FormattedDate date={updatedDate} />
									</div>
								)
							}
						</div>
						<hr />
					</div>
					<slot />
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
<style>
	main {
		width: calc(100% - 2em);
		max-width: 100%;
		margin: 0;
	}
	.hero-image {
		width: 100%;
	}
	.hero-image figure {
		margin: 0;
		text-align: center;
	}
	.hero-image img {
		display: block;
		margin: 0 auto;
		border-radius: 12px;
		box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
	}
	.hero-image figcaption {
		margin-top: 0.75rem;
		font-size: 0.9rem;
		color: var(--accent);
		font-style: italic;
		text-align: center;
		opacity: 0.8;
		font-family: 'Crimson Text', serif;
	}
	.prose {
		width: 800px;
		max-width: calc(100% - 2em);
		margin: auto;
		padding: 1em;
		color: var(--fg);
		font-family: 'Crimson Text', serif;
		line-height: 1.7;
	}
	.title {
		padding: 1rem 0;
		text-align: center;
	}
	.title h1 {
		font-family: 'Playfair Display', serif;
		font-size: 2.5rem;
		font-weight: 700;
		color: var(--fg);
		margin: 0 0 1rem 0;
		line-height: 1.3;
		border: none;
	}
	.description {
		font-size: 1.3rem;
		color: var(--fg);
		margin-bottom: 1.5rem;
		font-style: italic;
		opacity: 0.9;
		line-height: 1.6;
	}
	.date {
		margin-bottom: 0.5rem;
		color: var(--accent);
		font-size: 1.1rem;
		font-weight: 600;
	}
	.last-updated-on {
		font-style: italic;
		color: var(--accent);
		opacity: 0.8;
	}
	
	/* Enhanced content typography */
	.prose :global(h1) {
		font-family: 'Playfair Display', serif;
		font-size: 2.2rem;
		font-weight: 700;
		color: var(--accent);
		margin: 3rem 0 1.5rem 0;
		text-align: center;
		border-bottom: 1px solid var(--accent);
		padding-bottom: 0.5rem;
	}
	
	.prose :global(h2) {
		font-family: 'Playfair Display', serif;
		font-size: 1.8rem;
		font-weight: 600;
		color: var(--accent);
		margin: 2.5rem 0 1rem 0;
	}
	
	.prose :global(p) {
		font-size: 1.4rem;
		margin-bottom: 1.5rem;
	}
	
	.prose :global(blockquote) {
		font-style: italic;
		font-size: 1.25rem;
		color: var(--accent);
		background: rgba(16, 43, 16, 0.05);
		border-left: 4px solid var(--accent);
		padding: 1rem 1.5rem;
		margin: 2rem 0;
		border-radius: 0 8px 8px 0;
	}

	.prose :global(blockquote p) {
		margin: 0;
	}
	
	.prose :global(hr) {
		border: none;
		border-top: 1px solid var(--accent);
		margin: 1rem 0;
		width: 50%;
		margin-left: auto;
		margin-right: auto;
	}
	
	@media (max-width: 768px) {
		.title h1 {
			font-size: 2rem;
		}
		.description {
			font-size: 1.3rem;
		}
		.prose :global(h1) {
			font-size: 1.8rem;
		}
		.prose :global(p) {
			font-size: 1.2rem;
		}
	}
</style>