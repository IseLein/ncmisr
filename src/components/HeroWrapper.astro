---
export interface Props {
	class?: string;
}

const { class: className } = Astro.props;
---

<div class={`hero-wrapper ${className || ''}`}>
	<div class="hero-background">
		<svg class="leaf-pattern" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
			<defs>
				<pattern id="leafPattern" x="0" y="0" width="20" height="20" patternUnits="userSpaceOnUse">
					<path d="M5 15 Q10 5 15 15 Q10 20 5 15 Z" fill="rgba(34, 139, 34, 0.1)" />
					<path d="M12 8 Q16 3 18 8 Q15 12 12 8 Z" fill="rgba(46, 125, 50, 0.08)" />
				</pattern>
			</defs>
			<rect width="100%" height="100%" fill="url(#leafPattern)" />
		</svg>
		
		<div class="floating-leaves">
			<div class="leaf leaf-1">üåø</div>
			<div class="leaf leaf-2">üå±</div>
			<div class="leaf leaf-3">üçÇ</div>
			<div class="leaf leaf-4">üåæ</div>
			<div class="leaf leaf-5">üå±</div>
			<div class="leaf leaf-6">üçÇ</div>
		</div>
	</div>
	
	<div class="content">
		<slot />
	</div>
	
	<div class="wavy-border">
		<svg viewBox="0 0 1200 120" xmlns="http://www.w3.org/2000/svg">
			<path d="M0,60 Q100,15 200,55 Q300,95 400,50 Q500,5 600,65 Q700,125 800,45 Q900,-15 1000,75 Q1100,165 1200,60 L1200,120 L0,120 Z" fill="#f5f5dc" />
            <path d="M0,85 Q75,45 150,80 Q225,115 300,75 Q375,35 450,90 Q525,145 600,70 Q675,25 750,95 Q825,165 900,65 Q975,15 1050,100 Q1125,185 1200,85 L1200,120 L0,120 Z" fill="rgba(245,245,220,0.8)" />
		</svg>
	</div>
</div>

<style>
	.hero-wrapper {
		position: relative;
		background: linear-gradient(135deg, #0d3312 0%, #1b5e20 50%, #2e7d32 100%);
		width: 100vw;
		margin-left: calc(-50vw + 50%);
		overflow: hidden;
		min-height: 80vh;
		display: flex;
		flex-direction: column;
	}
	
	.hero-background {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		z-index: 1;
	}
	
	.leaf-pattern {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		opacity: 0.3;
	}
	
	.floating-leaves {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		pointer-events: none;
	}
	
	.leaf {
		position: absolute;
		font-size: 2rem;
		opacity: 0.4;
		animation: float 6s ease-in-out infinite;
	}
	
	.leaf-1 {
		top: 20%;
		left: 8%;
		animation-delay: 0s;
	}
	
	.leaf-2 {
		top: 65%;
		right: 12%;
		animation-delay: 2s;
	}
	
	.leaf-3 {
		top: 35%;
		left: 75%;
		animation-delay: 4s;
	}
	
	.leaf-4 {
		top: 80%;
		left: 45%;
		animation-delay: 1s;
	}
	
	.leaf-5 {
		top: 15%;
		left: 40%;
		animation-delay: 3s;
	}
	
	.leaf-6 {
		top: 55%;
		right: 35%;
		animation-delay: 1.5s;
	}
	
	@keyframes float {
		0%, 100% { transform: translateY(0px) rotate(0deg); }
		50% { transform: translateY(-20px) rotate(180deg); }
	}
	
	.content {
		position: relative;
		z-index: 2;
		width: 100%;
		flex: 1;
		display: flex;
		flex-direction: column;
	}
	
	.wavy-border {
		position: absolute;
		bottom: 0;
		left: 0;
		right: 0;
		z-index: 3;
	}
	
	.wavy-border svg {
		width: 100%;
		height: auto;
		display: block;
	}
</style>